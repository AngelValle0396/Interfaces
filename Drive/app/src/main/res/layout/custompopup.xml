<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="274dp"
    android:layout_marginTop="40dp"
    android:layout_gravity="top|center"
    android:theme="@style/Base.CardView"
    android:background="@drawable/background_border2"        android:orientation="vertical"
    >

    <TextView
        android:id="@+id/txt_closed"
        android:layout_marginStart="10dp"

        android:layout_width="20dp"
        android:layout_height="25dp"
        android:text="X"
        android:textStyle="bold"
        android:textSize="22dp"
        android:onClick="close"
        ></TextView>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="top|center"
        android:scaleType="centerCrop"
        android:src="@drawable/google"
        ></ImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_gravity="top"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/user"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angel Valle"
        android:layout_marginStart="53dp"
        android:layout_marginTop="70dp"
        android:textSize="10dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="angel.valle2015@uteq.edu.ec"
        android:layout_marginStart="53dp"
        android:textSize="10dp"
        android:layout_marginTop="85dp"
         />
    <TextView
        android:layout_width="255dp"
        android:layout_height="19dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="115dp"
        android:text="Administrar tu cuenta de Google"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="10dp"
        android:background="@drawable/background_border"
        ></TextView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/background_border2"
        >
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="7dp"
                android:layout_gravity="top|center"
                android:src="@drawable/box">
            </de.hdodenhof.circleimageview.CircleImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:src="@drawable/adduser">
            </de.hdodenhof.circleimageview.CircleImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="bottom|center"
                android:src="@drawable/adminsettings"></de.hdodenhof.circleimageview.CircleImageView>

        </LinearLayout>
         <LinearLayout
             android:layout_width="300dp"
             android:layout_height="100dp"
             android:orientation="vertical"
             android:layout_gravity="right"
             >
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="12dp"
                 android:text="Cambiar a perfil de trabajo"
                 android:textSize="10dp"
                 android:textStyle="bold"
                 >
             </TextView>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="15dp"
                 android:text="Agregar otra cuenta"
                 android:textSize="10dp"
                 android:textStyle="bold"
                 >
             </TextView>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="bottom"
                 android:layout_marginTop="19dp"
                 android:text="Administrar cuentas en este dispositivo"
                 android:textSize="10dp"
                 android:textStyle="bold"></TextView>
         </LinearLayout>

         </FrameLayout>

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_border3"
            android:text="PolÃ­tica de Privacidad"
            android:textSize="10dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|right"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/background_border3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Condiciones del Servicio"
            android:textSize="10dp"></TextView>
    </LinearLayout>
</FrameLayout>